---
import IconArrowMini from "./IconArrowMini.astro";

const {
  href = "#",
  label = "Learn more",
  class: className = "",
  color = "#151414",
  borderColor = "#000000",
  bg = "transparent",
  icon = true,
} = Astro.props;
---

<a
  href={href}
  class={
    "pill-button inline-flex h-[49px] items-center gap-3 rounded-full border px-6 text-[20px] font-medium leading-[23.8px] " +
    className
  }
  style={`border-color:${borderColor};color:${color};background:${bg};`}
>
  <span class="whitespace-nowrap">{label}</span>
  {icon ? (
    <span class="grid h-[30px] w-[30px] place-items-center">
      <IconArrowMini class="h-[18px] w-[18px]" color="currentColor" />
    </span>
  ) : null}
</a>

